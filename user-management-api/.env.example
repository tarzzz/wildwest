# Application Configuration
APP_NAME=user-management-api
APP_ENVIRONMENT=development
APP_VERSION=1.0.0

# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_SHUTDOWN_TIMEOUT=30s
# Comma-separated list of trusted proxy IPs (leave empty for none)
SERVER_TRUSTED_PROXIES=

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_DATABASE=userapi
DATABASE_SSLMODE=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MIN_CONNECTIONS=5
DATABASE_MAX_CONN_LIFETIME=1h
DATABASE_MAX_CONN_IDLE_TIME=10m

# JWT Configuration
# IMPORTANT: Change this secret in production!
JWT_SECRET=change-me-in-production-to-a-secure-random-string-at-least-32-chars
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h
JWT_ISSUER=user-management-api

# Rate Limiting Configuration
RATELIMIT_REQUESTS_PER_MINUTE=100
RATELIMIT_AUTH_REQUESTS_PER_MINUTE=10

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT_PATH=stdout

# CORS Configuration (Production)
# Comma-separated list of allowed origins
# CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com

# Email Configuration (Future - for email verification and password reset)
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=noreply@example.com
# EMAIL_SMTP_PASSWORD=your-smtp-password
# EMAIL_FROM_ADDRESS=noreply@example.com
# EMAIL_FROM_NAME=User Management API

# Redis Configuration (Future - for caching and rate limiting)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_MAX_RETRIES=3
# REDIS_POOL_SIZE=10
